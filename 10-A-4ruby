def sum_consecutives(lst)
    nlst = []
    i = 0
    while  i < lst.length
        a = lst[i]
        total = a
        
        while i+1 < lst.length and lst[i+1] == a 
            total = total + lst[i+1]  
            i = i+1
        end
          nlst.append(total)
        i += 1
      
    end
    return nlst

end
